<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/create-product.css">
    <script src="https://kit.fontawesome.com/17362327c7.js" crossorigin="anonymous"></script>
    <title>Ebla - Agregar Producto</title>
</head>

<body>
    <%- include('partials/nav.ejs') %>

    <main>
        <form class="register" action="create" method="post" enctype="multipart/form-data">
            <div class="fields-container">
                <div>
                    <input type="text" name="name" placeholder="Nombre del producto">
                <input type="number" name="price" placeholder="Precio del producto">
                <input type="number" name="discount" placeholder="Descuento">
                </div>
              <div>
                <select name="category" id="category">
                    <option value="in-sale">En oferta</option>
                    <option value="visited">Últimos agregados</option>
                </select>
                <label for="image"  class="custom-file-upload">
                    <input type="file" name="image" id="image">
                    <i class="fa-solid fa-file-arrow-up"></i> Subir imagen
                </label>
              </div>
            </div>
            <textarea name="description" id="description" placeholder="Ingresa una descripción" rows="10"></textarea>

            <button type="submit">Agregar</button>
        </form>
    </main>

    <%- include('partials/footer.ejs') %>
    <script src="js/scripts.js"></script>
</body>

</html>